@model NguyenCongLinhBTH2.Models.Customer
@{
    string id = @Guid.NewGuid().ToString("N");
}

<form asp-action="Create" method="post" class="col-6">
    <input type="hidden" asp-for="CustomerID" value=@id>
    <div class="mb-3">
        <label for="emp_name" class="form-label">Customer Name:</label>
        <input type="text" class="form-control" id="emp_name" asp-for="CustomerName">
    </div>
    <div class="mb-3">
        <label for="emp_add" class="form-label">Customer Address:</label>
        <input type="text" class="form-control" id="emp_add" asp-for="CustomerAddress">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>