@model NguyenCongLinhBTH2.Models.Person
@{
    string id = @Guid.NewGuid().ToString("N");
}

<form asp-action="Create" method="post" class="col-6">
    <input type="hidden" asp-for="PersonID" value=@id>
    <div class="mb-3">
        <label for="emp_name" class="form-label">Person Name:</label>
        <input type="text" class="form-control" id="emp_name" asp-for="PersonName">
    </div>
    <div class="mb-3">
        <label for="emp_add" class="form-label">Person Address:</label>
        <input type="text" class="form-control" id="emp_add" asp-for="PersonAddress">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>